@model List<Application.ViewModels.ProjectViewModel>
@{
    ViewData["Title"] = "Proyectos";
}

<div class="container-fluid">

    <div class="row mb-3">
        <div class="col-3 offset-9">
            <a asp-controller="Project" asp-action="CreateProject" class="btn btn-outline-success">Crear nuevo proyecto</a>
        </div>
    </div>

    <div class="row">

        @if(Model == null || Model.Count == 0){
            <h2>No hay Proyectos aún</h2>
        }
        else
        {
            @foreach (Application.ViewModels.ProjectViewModel item in Model)
            {
                <div class="col-4">
                  <div class="card shadow-sm mb-3">


                    <div class="card-body">
                        <h4>@item.Name</h4>
                        <div>
                            <small class="fw-bold fs-6">Descripción: @item.Description</small>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-controller="Project" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Editar</a>
                                    @*<a asp-controller="Project" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger deleteBtn">Borrar</a>*@
                                    <button type="button" data-id="@item.Id" class="btn btn-sm btn-outline-danger deleteBtn">Borrar</button>
                            </div>
                        </div>
                    </div>
                  </div>
                </div>
            }
        }
                        
     </div>
</div>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

<form id="deleteForm" asp-action="Delete">

    <input type="hidden" id="projectTypeId" name="Id" />

</form>

@section Scripts{

    <script>
        $(function () {
            $('.deleteBtn').click(function(e) {
                swal({
                    title: "¿Está seguro?",
                    text: "¿Está seguro que desea eliminar el proyecto?",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true
                }).then((confirm) => {
                    if (confirm) {
                        var btn = $(this);
                        var id = btn.data("id");
                        $('#projectTypeId').val(id);
                        $('#deleteForm').submit();
                    }
                })
            })
        })
    </script>

}