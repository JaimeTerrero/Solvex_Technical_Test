@model List<Application.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Usuarios";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-3 offset-9">
            <a asp-controller="User" asp-action="CreateUser" class="btn btn-outline-success">Crear nuevo usuario</a>
        </div>
    </div>

    <div class="row">
        @if(Model == null || Model.Count == 0)
        {
            <h2>No hay Usuarios aún</h2>
        }
        else
        {
            @foreach (Application.ViewModels.UserViewModel item in Model)
            {
                <div class="col-4">
                    <div class="card shadow-sm mb-3">


                    <div class="card-body">
                        <h4>@item.Name @item.Lastname</h4>
                        <div class="mb-2">
                                <small class="fw-bold fs-6">Posición: <span class="fw-normal">@item.Position</span></small>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                    <a asp-controller="User" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Editar</a>
                                    <button type="button" data-id="@item.Id" class="btn btn-sm btn-outline-danger deleteBtn">Borrar</button>
                            </div>
                        </div>
                    </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

<form id="deleteForm" asp-action="Delete">

    <input type="hidden" id="userId" name="Id" />

</form>

@section Scripts{

    <script>
        $(function () {
            $('.deleteBtn').click(function (e) {
                swal({
                    title: "¿Está seguro?",
                    text: "¿Está seguro que desea eliminar el usuario?",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true
                }).then((confirm) => {
                    if (confirm) {
                        var btn = $(this);
                        var id = btn.data("id");
                        $('#userId').val(id);
                        $('#deleteForm').submit();
                    }
                })
            })
        })
    </script>

}