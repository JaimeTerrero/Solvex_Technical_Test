@{
}
@model List<Application.ViewModels.UserViewModel>
@{
    ViewData["Title"] = "Usuarios";

    List<Application.ViewModels.ProjectViewModel> projects = ViewData["Projects"] as List<Application.ViewModels.ProjectViewModel>;
}

<div class="container-fluid">
    <div class="row">

        @if (Model == null || Model.Count == 0)
        {
            <h2>No hay Usuarios aún</h2>
        }
        else
        {
            @foreach (Application.ViewModels.UserViewModel item in Model)
            {
                <div class="col-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h4>@item.Firstname @item.Lastname</h4>
                            <div>
                                <small class="fw-bold fs-6">Proyecto asignado: @item.Project.Name</small>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Project" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Editar</a>
                                    <a asp-controller="Project" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Borrar</a>
                                </div>
                                <button type="button" data-bs-toggle="modal" data-bs-target="#projectModal@(item.Id)" class="btn btn-outline-danger text-dark fw-bold">Cambiar proyecto</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal fade" id="projectModal@(item.Id)" tabindex="-1" aria-labelledby="ModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="projectModal@(item.Id)">Cambiar Projecto</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                            </div>
                            <form method="post" asp-controller="User" asp-action="ChangeProject">
                                <div class="modal-body">
                                    <div class="mb-3">
                                        <label class="form-label">Proyecto Actual: <strong>@item.Project.Name</strong></label>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="@item.ProjectId" class="form-label">Nuevo Proyecto:</label>
                                        <select class="form-select" asp-for="@item.ProjectId">
                                            <option selected value="0">Select Project</option>
                                            @foreach (Application.ViewModels.ProjectViewModel project in projects)
                                            {
                                                <option value="@project.Id">@project.Name</option>
                                            }
                                        </select>
                                        <span asp-validation-for="@item.ProjectId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                    <button type="submit" class="btn btn-outline-primary">Guardar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }

    </div>
</div>